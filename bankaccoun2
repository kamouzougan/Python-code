import time 
import sys 
import os 
from getpass import getpass

balance = 0 
pin_list = []
def deposit(num): 
    total  = balance  + amount 
    return total 
def withdraw(num):
    total = balance - amount 
    return total 
def createpin():
  pin_number = getpass("please create your pin")
  pin_list.append(pin_number) 
  print(pin_list)
  print('you have succesfully create your pin number')
  print('Please wait ..... ')
  time.sleep(3)
  os.system('clear') 
  pin1= input('please enter your pin')
  if pin1==pin_number :
    print('access granted')
    
  else : 
    print('access denied')
    print('You are not authorized to access an account ')
createpin()
while (True):
 
    
  print(''' ########################################################''')
  print('                  Welcome to my bank                         ')
  print  ('''  
                       1.deposit
                       2.withdraw 
                       3.check balance) 
                ''')
              
  menu = input('please make your selection')
  if menu == '1': 
   amount = int(input('Please enter your amount') )
   print('deposit')
   balance = deposit(amount)
   print('your total deposit is :',balance)
  
              
  elif menu == '2':
   amount = int(input('Please enter your amount') )
   print('withdraw')
   balance = withdraw(amount)
   print('after your withraw your total balance is : ', balance)
   print()
  elif menu =='3':
       print('Your total balance is : ' , balance)
